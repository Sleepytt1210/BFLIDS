{
   "compilerOptions": {
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true,
       "outDir": "dist",
       "moduleResolution": "node",
       "declaration": true,
       "sourceMap": true,
       "noImplicitAny": true,
       "esModuleInterop": true,
       "target": "ES2017",
       "module": "CommonJS"
   },
   "include": [
       "./src/**/*"
   ],
   "exclude": [
       "./src/**/*.spec.ts"
   ]
}